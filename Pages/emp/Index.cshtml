@page 
@model KOTApp.Pages.org.emp.IndexModel
@{
    ViewData["Title"] = "Index";
}
<h3>  
    <a asp-page="../Org/Index" 
       asp-route-oid=@Model.Org.CompanyOwnerId 
       class="link">
    My Companies</a> 
    
    > @Model.Org.CompanyName > Employees
    
</h3>

<a asp-page="Edit" asp-route-cid='@Model.Org.CompanyId' class="btn btn-primary mb-2">Add New Employee</a>

<form method="post">
    <button class="btn btn-success" asp-page-handler="Draw" asp-route-cid="@Model.Org.CompanyId" type="submit">Draw</button>
</form>

<form method="get">
    <div class="input-group mt-2">
        <input type="search" class="form-control" value="" />
        <span class="input-group-lg">
            <button class="btn btn-dark">Search</button>
        </span>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>

            <th>Last Name</th>

            <th>Hired Date</th>

            <th>Term Date</th>

            <th>Draw Amount</th>

            <th>Emp Comm Percent</th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employees) {
        <tr>
            <td>@item.FirstName</td>

            <td>@item.LastName</td>

            <td>@item.HiredDate.ToShortDateString()</td>

            <td>@(item.TermDate.HasValue?item.TermDate.Value.ToShortDateString():"")</td>

            <td>@item.DrawAmount</td>

            <td>@item.EmpCommPercent</td>

            <td style="width:auto">
                <a asp-page="./Edit" 
                    asp-route-oid="@item.Company.CompanyOwnerId"
                    asp-route-cid="@item.CompanyId"
                    asp-route-eid="@item.EmployeeID" 
                    class="btn btn-info">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>

