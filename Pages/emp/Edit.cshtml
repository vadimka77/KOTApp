@model KOTApp.Pages.org.emp.EditModel

@{
    ViewData["Title"] = "Employee Info";
}

<h4>  
    <a asp-page="../Org/Index" 
       asp-route-oid=@Model.Org.CompanyOwnerId 
       class="link">
    My Companies</a> 
     >
    <a asp-page="../Org/OrgDetails" 
       asp-route-oid="@Model.Org.CompanyOwnerId"
       asp-route-cid="@Model.Org.CompanyId" 
       class="link">
      @Model.Org.CompanyName</a> 

   > <a href='@("/emp/index?&cid=" + Request.Query["cid"])'> Employees</a> > 
   
</h4>
<h3> @(@Model.Employee.EmployeeID==0?"Add New":"Update") Employee Info</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.EmployeeID" />
            <input type="hidden" asp-for="Employee.CompanyId" />
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.HiredDate" class="control-label"></label>
                <input asp-for="Employee.HiredDate" class="form-control" type="date"/>
                <span asp-validation-for="Employee.HiredDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.TermDate" class="control-label"></label>
                <input asp-for="Employee.TermDate" class="form-control" type="date"/>
            </div>
            <div class="form-group">
                <label asp-for="Employee.DrawAmount" class="control-label"></label>
                <input asp-for="Employee.DrawAmount" class="form-control"/>
               
            </div>
            <div class="form-group">
                <label asp-for="Employee.EmpCommPercent" class="control-label"></label>
                <input asp-for="Employee.EmpCommPercent" class="form-control" />
                
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary">Save</button>
            
            </div>
        </form>
    </div>
</div>

<a class="btn btn-info mt-2"
   href='@("/emp/index?&cid=" + Request.Query["cid"])'>
   back to list</a>
