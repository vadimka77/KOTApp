@page
@model KOTApp.Pages.contracts.EditModel

@{
    ViewData["Title"] = "Update";
}

<h4> 
    <a asp-page="../Org/Index" 
       asp-route-oid=@Model.Org.CompanyOwnerId 
       class="link">
    My Companies</a> 
     >
    <a asp-page="../Org/OrgDetails"
       asp-route-oid="@Model.Org.CompanyOwnerId"
       asp-route-cid="@Model.Org.CompanyId"
       class="link">
      @Model.Org.CompanyName</a> 

   > <a href='@("/emp/index?&cid=" + Request.Query["cid"])'>Employees</a> > 
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Job.ContractId" />
            <input type="hidden" asp-for="Job.CompanyId" />
            <div class="form-group">
                <label asp-for="Job.ContractName" class="control-label"></label>
                <input asp-for="Job.ContractName" class="form-control" />
                <span asp-validation-for="Job.ContractName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.ContractDate" class="control-label"></label>
                <input asp-for="Job.ContractDate" class="form-control" type="date"/>
                <span asp-validation-for="Job.ContractDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.ContractAmount" class="control-label"></label>
                <input asp-for="Job.ContractAmount" class="form-control" />
                <span asp-validation-for="Job.ContractAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.EmployeeID" class="control-label"></label>
                <select asp-for="Job.EmployeeID" class ="form-control" asp-items="Model.EmpSelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
