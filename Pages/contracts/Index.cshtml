@page
@model KOTApp.Pages.contracts.IndexModel

@{
    ViewData["Title"] = "Contracts";
}

<h4>  
    <a asp-page="../Org/Index" 
       asp-route-oid=@Model.Org.CompanyOwnerId 
       class="link">
    My Companies</a> 
     >
    <a asp-page="../Org/OrgDetails" 
       asp-route-oid="@Model.Org.CompanyOwnerId"
       asp-route-cid="@Model.Org.CompanyId" 
       class="link">
      @Model.Org.CompanyName</a> 

   > <a href='@("/emp/index?&cid=" + @Model.Org.CompanyId)'> Employees</a> > 
   
</h4>

<a asp-page="Edit"
   asp-route-cid="@Model.Org.CompanyId"
   class="btn btn-outline-primary">
Add New Contract</a>

<table class="table">
    <thead>
        <tr>
            <th>Company</th>
            <th>Contract Name</th>
            <th>Contract Date</th>
            <th>Contract Amount</th>
            <th>Employee</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ContractList) {
            <tr>
                <td>
                    @item.Company.CompanyName
                </td>
                <td>
                    @item.ContractName
                </td>
                <td>
                    @item.ContractDate.ToShortDateString()
                </td>
                <td>
                    @item.ContractAmount
                </td>
                <td>
                    @item.Employee.FirstName @item.Employee.LastName
                </td>
                <td>
                    <a asp-page="./Edit" 
                       asp-route-cid="@item.CompanyId"
                       asp-route-jid="@item.ContractId"
                       class="btn btn-outline-secondary">
                    Edit</a>
                    <a asp-page="./Details" 
                       asp-route-cid="@item.CompanyId"
                       asp-route-eid="@item.EmployeeID"
                       asp-route-jid="@item.ContractId"
                       class="btn btn-outline-info">
                    Info</a>
                </td>
            </tr>
        }
    </tbody>
</table>
