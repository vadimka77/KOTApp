@page
@model KOTApp.Pages.contracts.CreateModel

@{
    ViewData["Title"] = "Add";
}

<h4>  
    <a asp-page="../Org/Index" 
       asp-route-oid="@Model.Org.CompanyOwnerId"
       class="link">
    My Companies</a> 

    > <a asp-page="../Org/OrgDetails" 
       asp-route-oid="@Model.Org.CompanyOwnerId"
       asp-route-cid="@Model.Org.CompanyId" 
       class="link">
      @Model.Org.CompanyName</a> 

    > <a href='@("/contracts/index?cid=" + Model.Org.CompanyId)'>Contracts</a>
    > Add contract
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Contract.CompletionCertificate" />
            <input type="hidden" asp-for="Contract.CloseDate" />
            <input type="hidden" asp-for="Contract.AdvancePercent" />
            <input type="hidden" asp-for="Contract.CompanyOwnerPercent" />
            <input type="hidden" asp-for="Contract.CompanyId" />
            <input type="hidden" asp-for="Contract.COTotal" />
            <div class="form-group">
                <label asp-for="Contract.ContractName" class="control-label"></label>
                <input asp-for="Contract.ContractName" class="form-control" />
                <span asp-validation-for="Contract.ContractName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contract.Employee" class="control-label"></label>
                <select asp-for="Contract.EmployeeId" class ="form-control" asp-items="@Model.EmpSelectList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Contract.ContractAmount" class="control-label"></label>
                <input asp-for="Contract.ContractAmount" class="form-control" />
                <span asp-validation-for="Contract.ContractAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contract.StartDate" class="control-label"></label>
                <input asp-for="Contract.StartDate" class="form-control" type="date"/>
            </div>
            <div class="form-group">
                <label asp-for="Contract.Cost" class="control-label"></label>
                <input asp-for="Contract.Cost" class="form-control" />
                <span asp-validation-for="Contract.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <button type="submit" class="btn btn-primary mt-2">Save</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-cid="@Model.Org.CompanyId" class="btn btn-info mt-2">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
