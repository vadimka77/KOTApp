@page
@model KOTApp.Pages.tx.AllModel

@{
    ViewData["Title"] = "All";
}
@section Styles {
    <link rel="stylesheet" href="~/lib/datatables.net-bs5/datatables.bootstrap5.css" />
}

<h4>  
    <a asp-page="../Org/Index" 
       asp-route-oid="@Model.Org.CompanyOwnerId"
       class="link">
    My Companies</a> 
    >
    <a asp-page="../Org/OrgDetails" 
       asp-route-oid="@Model.Org.CompanyOwnerId"
       asp-route-cid="@Model.Org.CompanyId" 
       class="link">
      @Model.Org.CompanyName</a> 
    > All Transactions 
</h4>

<table id="tblList" class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Employee</th>
            <th>Type</th>
            <th>Desription</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Txes) {
            <tr>
                <td>@item.TxDate</td>
                <td>@item.TxAmount</td>
                <td>@item.Employee.FullName</td>
                <td>@item.TxType</td>
                <td>@item.Descr</td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
        <script src="~/lib/datatables.net/jquery.datatables.js"></script>
        <script src="~/lib/datatables.net-bs5/datatables.bootstrap5.js"></script>

        <script type="text/javascript">
            $(document).ready(function () {
                $('#tblList').DataTable();
            });
        </script>

}