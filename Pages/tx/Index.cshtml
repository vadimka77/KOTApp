@page
@model KOTApp.Pages.tx.IndexModel

@{
    ViewData["Title"] = "Transactions";
}

<h4>  
    <a asp-page="../Org/Index" 
       asp-route-oid="@Model.Org.CompanyOwnerId"
       class="link">
    My Companies</a> 
     >
    <a asp-page="../Org/OrgDetails" 
       asp-route-oid="@Model.Org.CompanyOwnerId"
       asp-route-cid="@Model.Org.CompanyId" 
       class="link">
      @Model.Org.CompanyName</a> 
    > Transactions 
</h4>

<a asp-page="Create" 
   asp-route-cid="@Model.Org.CompanyId" 
   class="btn btn-outline-primary">
Add Transaction</a>
<table class="table">
    <thead>
        <tr>
            <th>Transaction Date</th>
            <th>Transaction Type</th>
            <th>Amount</th>
            <th>Employee</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TrEntries) {
            <tr>
                <td>@item.TxDate.ToShortDateString()</td>
                <td>@item.TxType</td>
                <td>@item.TxAmount</td>
                <td>@item.Employee.FullName</td>
                <td>@item.Descr</td>
            </tr>
        }
    </tbody>
</table>
